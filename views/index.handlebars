<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">


            <div class="jumbotron">
                <h1 class="text-center">
                    Enter Fantasy Burger Cafe!
                </h1>
                <img src="assets/img/burger-neon.jpg" class="" alt="blt cheese burger" />
                <br>
                <h3>The place to devour ANY and EVERY kind of Burger!!</h3>
                <br />
                <div class="row">
                    {{#each burger_data}}
                    {{#unless this.devoured}}
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">DEVOUR this!</button>

                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
            <br>
            <br>
            <input type="text" name="burger_name" class="form-control" value="" id="">
            <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>

            <h4>Order your dream burger at the window, and hit "submit"!</h4>
            <br>
            <br>
            <div class="col-xs-6 text-center" class="task">
                {{#each burger_data}}
                {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>

